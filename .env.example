
# =============================================================================
# Job Notifier - Telegram Ingestion Service Configuration
# =============================================================================

# Main Application Configuration
# -----------------------------------------------------------------------------

# Telegram session string (generated by generate_session.py)
TELEGRAM_SESSION_STRING=your_session_string_here

# Comma-separated list of Telegram groups to monitor
# Example: "Tech Jobs,Python Jobs,Remote Work"
TELEGRAM_GROUPS=Group Name 1,Group Name 2,Group Name 3

# MySQL database connection URL
# Format: mysql://username:password@host:port/database_name
# Note: URL-encode special characters in password (e.g., @ becomes %40)
DATABASE_URL=mysql+mysqlconnector://username:password@localhost:3306/database_name

# Scheduler interval in milliseconds (default: 18000000 = 5 hours)
# Examples: 60000 = 1 minute, 3600000 = 1 hour, 18000000 = 5 hours
SCHEDULE_INTERVAL_MS=18000000

# One-Time Setup Configuration (for generate_session.py only)
# -----------------------------------------------------------------------------

# Telegram API credentials from https://my.telegram.org/apps
TELEGRAM_API_ID=your_api_id
TELEGRAM_API_HASH=your_api_hash
TELEGRAM_PHONE_NUMBER=+1234567890
